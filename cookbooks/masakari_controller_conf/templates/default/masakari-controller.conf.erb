[wsgi]
server_port = 15868

[db]
drivername = mysql
host = <%= node['controller_conf']['service_host'] %>
name = vm_ha
user = root
passwd = password
charset = utf8
lock_retry_max_cnt = 6
innodb_lock_wait_timeout = 50

[log]
log_level = info
log_file = /var/log/masakari/masakari-controller.log
logging_context_format_string = %(asctime)s.%(msecs)03d %(process)d %(levelname)s %(name)s [%(threadName)s] %(message)s

[recover_starter]
interval_to_be_retry = 300
max_retry_cnt = 3
semaphore_multiplicity = 5
notification_time_difference = 240
node_err_wait = 180
api_max_retry_cnt = 3
api_retry_interval = 10
recovery_max_retry_cnt = 6
recovery_retry_interval = 10
api_check_interval = 1
api_check_max_cnt = 30
notification_expiration_sec = 900

[nova]
domain = Default
admin_user = admin
admin_password = password
auth_url =  http://<%= node['controller_conf']['service_host'] %>:5000
project_name = admin

[vmha_data_manage]
period = 30
